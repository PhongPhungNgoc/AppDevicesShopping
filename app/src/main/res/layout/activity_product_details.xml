<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ProductDetails">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarProductDetails"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#0097A7"
        app:title="Product Details"></android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_productDetails"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="6dp"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/tv_nameProduct"
                        style="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="0.5"
                        android:text="Name Product"
                        android:textColor="#1A237E"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_priceProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="0.5"
                        android:text="Price Product"
                        android:textColor="@color/colorAccent"
                        android:textStyle="italic" />

                    <Spinner
                        android:id="@+id/spinner_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:background="@drawable/spinner"
                        android:textAlignment="center"></Spinner>

                    <Button
                        android:id="@+id/btn_addCart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="0.5"
                        android:text="Add Cart" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Describe Product"
                    android:textColor="#1A237E"
                    android:textStyle="bold" />




                    <TextView
                        android:id="@+id/tv_descProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="1000dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textSize="18dp" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>